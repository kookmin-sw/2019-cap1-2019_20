<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_9"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="authentication.SelectAuth">

    <Button
        android:id="@+id/auth_exif"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/buttoncolor_4"
        android:onClick="Select_Auth"
        android:text="사진으로 인증"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/auth_qr"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/buttoncolor_2"
        android:onClick="Select_Auth"
        android:text="QR코드로 인증"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/auth_bicorn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/buttoncolor_4"
        android:onClick="Select_Auth"
        android:text="비콘으로 인증"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/auth_gps"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/buttoncolor_2"
        android:onClick="Select_Auth"
        android:text="GPS로 인증"
        android:layout_marginTop="30dp"/>


</LinearLayout>
