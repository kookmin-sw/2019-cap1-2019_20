        app:layout_constraintTop_toBottomOf="@+id/eventmonth" />


    <TextView
        android:id="@+id/eventreward"
        android:layout_width="249dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
