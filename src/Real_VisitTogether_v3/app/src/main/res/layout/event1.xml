<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="event.Event1">


    <LinearLayout
        android:id="@+id/temp_layout1"
        android:layout_width="352dp"
        android:layout_height="126dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:onClick="onClickEvent1" />

        <TextView
            android:id="@+id/place_name1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/temp_layout2"
        android:layout_width="352dp"
        android:layout_height="121dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:onClick="onClickEvent1" />

        <TextView
            android:id="@+id/place_name2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/temp_layout3"
        android:layout_width="352dp"
        android:layout_height="112dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:onClick="onClickEvent1" />

        <TextView
            android:id="@+id/place_name3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:textAlignment="center"
            android:textSize="36sp" />

    </LinearLayout>

    <fragment
        android:id="@+id/mapView"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="202dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Rank"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/buttoncolor_4"
            android:onClick="onClickEvent1"
            android:text="랭킹" />
        <!--참여 버튼 우측으로 밀기위한 수단-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Participation"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:background="@drawable/buttoncolor_4"
            android:onClick="onClickEvent1"
            android:text="참여" />


    </LinearLayout>

</LinearLayout>