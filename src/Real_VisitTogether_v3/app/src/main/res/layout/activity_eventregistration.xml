<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_3"
    tools:context="display.Eventregistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:text="이벤트 명:" />

        <EditText
            android:id="@+id/inputevent"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/term"
            android:layout_width="56dp"
            android:layout_height="25dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="56dp"
            android:text="기간제한:" />

        <EditText
            android:id="@+id/inputYear"
            android:layout_width="49dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="26dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:text="년" />

        <EditText
            android:id="@+id/inputMonth"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="44dp" />

        <TextView
            android:id="@+id/month"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="월" />

        <EditText
            android:id="@+id/inputDay"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="11dp"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:text="일" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Slush"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="/"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Noterm"
            android:layout_width="64dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="204dp"
            android:background="@drawable/buttoncolor_5"
            android:text="없음" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:text="보상:" />

        <EditText
            android:id="@+id/inputReward"
            android:layout_width="186dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/buttoncolor_4"
        android:text="장소추가" />

    <LinearLayout
        android:id="@+id/placesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/buttoncolor_4"
        android:text="등록" />


</LinearLayout>