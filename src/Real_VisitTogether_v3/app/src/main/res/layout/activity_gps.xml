<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="authentication.Auth_Gps">


    <Button
        android:id="@+id/mylocation"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/colorAccent"
        android:text="내 위치정보 가져오기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtResult"
        android:layout_width="313dp"
        android:layout_height="82dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="36dp"
        android:text="위치정보 :GPS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    //지도 구현

    <fragment
        android:id="@+id/mapView2"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="394dp"
        android:layout_height="415dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="306dp"
        android:layout_marginTop="538dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="@color/colorAccent"
        android:text="인증"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
